<div class="container">
  <h1><%= @task.title %></h1>
  <div class="alert alert-secondary" role="alert">
    <p><%= @task.details %></p>
  </div>
  <% if @task.completed %>
    <i class="fa-regular fa-square-check"></i> This task is completed
  <% else %>
    <i class="fa-regular fa-square"></i> This task is not yet completed
  <% end %>
  <br><br>
  <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-warning" %>
  <br><br>
  <%= link_to "Back to list", tasks_path, class:"btn btn-light" %>
</div>
